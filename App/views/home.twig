{% extends 'layout.twig' %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1 class="page-title">Free search & classifieds posting</h1>
				<div class="icons">
					<i class="fa-solid fa-car icon icon-active">
						<p class="icon-name-car">cars</p>
					</i>
					<i class="fa-solid fa-motorcycle icon">
						<p class="icon-name-motorcycle">motorcycle</p>
					</i>
				</div>
				<form class="search-bar" action="/carlist" method="get">
					<div class="input-group">
						<input type="text" name="q" class="form-control" placeholder="Search for...">
						<button type="submit" class="search-button">Search</button>
						<i class="fa-solid fa-magnifying-glass search-bar-icon"></i>

					</div>
				</form>
			</div>
			<p class="total-search-results">among x classifieds</p>
		</div>

		<ul>
			{% for post in posts %}
				<li>
					<a href="">{{ post.title }}</a>
				</li>
			{% endfor %}
		</ul>
	</div>
</div></div>{% endblock %}
